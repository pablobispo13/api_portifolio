generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Log {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  timestamp DateTime @default(now())
  logType   String
  message   String
  userId    Int?

  @@index([userId])
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  token String @unique
  userId Int   @unique
}
