generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Log {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  timestamp DateTime @default(now())
  logType   String
  message   String
  id_user   Int?

  @@index([id_user])
}

model User {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  token          String          @unique
  id_user        Int             @unique
  phoneNumber    String          @unique
  email          String          @unique
  password       String
  twilioSettings TwilioSettings?
}

model TwilioSettings {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  accountSid String
  authToken  String
  fromNumber String
  toNumber   String
  id_user    Int    @unique

  user User @relation(fields: [id_user], references: [id_user])

  @@map("twilio_settings")
}
